package com.flansmod.eventhandler;

import com.flansmod.common.FlansMod;
import com.flansmod.common.guns.EntityBullet;
import com.flansmod.common.guns.EntityGrenade;
import com.flansmod.common.network.PacketKillMessage;

import cpw.mods.fml.common.Mod.EventHandler;
import cpw.mods.fml.common.eventhandler.SubscribeEvent;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.util.EntityDamageSource;
import net.minecraftforge.common.MinecraftForge;
import net.minecraftforge.event.entity.living.LivingDeathEvent;

public class PlayerDeathEventListener 
{

public PlayerDeathEventListener()
{
	MinecraftForge.EVENT_BUS.register(this);
}

@EventHandler
@SubscribeEvent

public void PlayerDied(LivingDeathEvent DamageEvent)
{	
	if(DamageEvent.source.getDamageType().equalsIgnoreCase("explosion")&&((DamageEvent.source.getSourceOfDamage() instanceof EntityGrenade) || (DamageEvent.source.getSourceOfDamage() instanceof EntityBullet)))
	{
		boolean isGrenade;
		if(DamageEvent.source.getSourceOfDamage() instanceof EntityGrenade)
		{
			isGrenade=true;
			EntityGrenade Grenade=(EntityGrenade)DamageEvent.source.getSourceOfDamage();
		}
		else
		{
			isGrenade=false;
			EntityBullet Grenade=(EntityBullet)DamageEvent.source.getSourceOfDamage();
		}
		if(DamageEvent.entityLiving instanceof EntityPlayer&&isGrenade==false)
		{
			FlansMod.getPacketHandler().sendToDimension(new PacketKillMessage(false, ((EntityBullet)DamageEvent.source.getSourceOfDamage()).type, ((EntityPlayer)DamageEvent.entity).getDisplayName(), ((EntityPlayer)DamageEvent.source.getSourceOfDamage()).getDisplayName()), DamageEvent.entityLiving.dimension);
		}
		if(DamageEvent.entityLiving instanceof EntityPlayer&&isGrenade==true)
		{
			FlansMod.getPacketHandler().sendToDimension(new PacketKillMessage(false, ((EntityGrenade)DamageEvent.source.getSourceOfDamage()).type, ((EntityPlayer)DamageEvent.entity).getDisplayName(), ((EntityPlayer)DamageEvent.source.getSourceOfDamage()).getDisplayName()), DamageEvent.entityLiving.dimension);
		}
	}
}

}
